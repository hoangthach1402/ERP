<script>
let currentProduct = null;
const productCodeInput = document.getElementById('productCode');
const productInfo = document.getElementById('productInfo');
const scanMessage = document.getElementById('scanMessage');

// Define all functions first
async function scanProduct(code) {
  try {
    const response = await fetch('/scan/scan', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productCode: code })
    });

    const data = await response.json();

    if (response.ok) {
      currentProduct = data.product;
      displayProductInfo(data.product, data.task);
      productCodeInput.value = '';
      productCodeInput.focus();
    } else {
      let errorMsg = data.error || 'S·∫£n ph·∫©m kh√¥ng t√¨m th·∫•y';
      showScanError(errorMsg);
      productCodeInput.value = '';
      productCodeInput.focus();
    }
  } catch (error) {
    console.error('Error:', error);
    showScanError('L·ªói server, vui l√≤ng th·ª≠ l·∫°i');
    productCodeInput.value = '';
    productCodeInput.focus();
  }
}

function showScanError(message) {
  const messageDiv = document.createElement('div');
  messageDiv.className = 'bg-red-50 border-l-4 border-red-500 p-4 mb-4 rounded text-red-700';
  messageDiv.innerHTML = `<i class="fas fa-exclamation-circle mr-2"></i>${message}`;
  
  scanMessage.parentElement.insertBefore(messageDiv, scanMessage.nextSibling);
  
  setTimeout(() => messageDiv.remove(), 5000);
}

function displayProductInfo(product, task) {
  document.getElementById('infoCode').textContent = product.code;
  document.getElementById('infoName').textContent = product.name;
  document.getElementById('infoStage').textContent = product.currentStage;

  if (!task) {
    showScanError('Kh√¥ng t√¨m th·∫•y c√¥ng vi·ªác cho kh√¢u n√†y');
    return;
  }

  let statusBadge = document.getElementById('infoStatus');
  let statusClass = '';

  if (task.status === 'pending') {
    statusBadge.textContent = '‚è∏Ô∏è CH·ªú ƒê·ª¢I';
    statusClass = 'bg-yellow-100 text-yellow-800';
  } else if (task.status === 'processing') {
    statusBadge.textContent = '‚è±Ô∏è ƒêANG L√ÄM';
    statusClass = 'bg-blue-100 text-blue-800';
  } else if (task.status === 'completed') {
    statusBadge.textContent = '‚úÖ HO√ÄN TH√ÄNH';
    statusClass = 'bg-green-100 text-green-800';
  }

  statusBadge.className = statusClass + ' text-sm font-semibold px-3 py-1 rounded-full';

  let buttons = '';
  if (task.status === 'pending') {
    buttons = `
      ${task.pending_reason ? `
        <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-4 rounded">
          <p class="text-sm text-yellow-900"><i class="fas fa-exclamation-triangle mr-2"></i>Thi·∫øu nguy√™n li·ªáu</p>
          <p class="text-xs text-yellow-800 mt-1">${task.pending_reason}</p>
        </div>
      ` : ''}
      <div class="bg-white border border-gray-200 rounded-lg p-3">
        <label class="block text-xs font-semibold text-gray-700 mb-2">L√Ω do thi·∫øu nguy√™n li·ªáu</label>
        <textarea id="pendingReason" rows="2" placeholder="V√≠ d·ª•: Thi·∫øu nguy√™n li·ªáu ABC" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-sm"></textarea>
        <button class="action-btn w-full mt-2 bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-lg text-sm transition" data-action="pending">
          <i class="fas fa-exclamation-circle mr-2"></i>B√ÅO THI·∫æU NGUY√äN LI·ªÜU
        </button>
      </div>
      <button class="action-btn w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-lg text-lg transition" data-action="start">
        <i class="fas fa-play mr-2"></i>B·∫ÆT ƒê·∫¶U KH√ÇU
      </button>
    `;
  } else if (task.status === 'processing') {
    buttons = `
      <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-4 rounded">
        <p class="text-sm text-blue-900">ƒêang x·ª≠ l√Ω t·ª´: <strong id="startTime"></strong></p>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-3 mb-3">
        <label class="block text-xs font-semibold text-gray-700 mb-2">B√°o thi·∫øu nguy√™n li·ªáu</label>
        <textarea id="pendingReason" rows="2" placeholder="V√≠ d·ª•: Thi·∫øu nguy√™n li·ªáu ABC" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-sm"></textarea>
        <button class="action-btn w-full mt-2 bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-lg text-sm transition" data-action="pending">
          <i class="fas fa-exclamation-circle mr-2"></i>CHUY·ªÇN SANG CH·ªú NGUY√äN LI·ªÜU
        </button>
      </div>
      <button class="action-btn w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-4 rounded-lg text-lg transition" data-action="complete">
        <i class="fas fa-check mr-2"></i>HO√ÄN TH√ÄNH
      </button>
    `;
    if (task.start_time) {
      setTimeout(() => {
        const startTimeEl = document.getElementById('startTime');
        if (startTimeEl) {
          startTimeEl.textContent = new Date(task.start_time).toLocaleString('vi-VN');
        }
      }, 0);
    }
  } else if (task.status === 'completed') {
    buttons = `
      <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded">
        <p class="text-sm text-green-900"><i class="fas fa-check-circle mr-2"></i>Kh√¢u n√†y ƒë√£ ho√†n th√†nh!</p>
        <p class="text-xs text-green-800 mt-2">Ho√†n th√†nh l√∫c: <strong>${new Date(task.end_time).toLocaleString('vi-VN')}</strong></p>
      </div>
    `;
  }

  document.getElementById('actionButtons').innerHTML = buttons;
  
  // Reattach event listeners to new buttons
  document.querySelectorAll('.action-btn').forEach(btn => {
    btn.addEventListener('click', handleAction);
  });
  
  scanMessage.classList.add('hidden');
  productInfo.classList.remove('hidden');
}

async function startTask() {
  if (!currentProduct) return;
  try {
    const response = await fetch('/scan/start', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId: currentProduct.id })
    });

    const data = await response.json();
    if (data.success) {
      alert('‚úì Kh√¢u ƒë√£ b·∫Øt ƒë·∫ßu!');
      location.reload();
    } else {
      alert('‚úó ' + (data.error || 'L·ªói'));
    }
  } catch (error) {
    console.error('Error:', error);
    alert('‚úó L·ªói server');
  }
}

async function completeTask() {
  if (!currentProduct) return;
  try {
    const response = await fetch('/scan/complete', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId: currentProduct.id })
    });

    const data = await response.json();
    if (data.success) {
      if (data.product.status === 'completed') {
        alert('‚úì S·∫£n ph·∫©m ƒë√£ ho√†n th√†nh to√†n b·ªô quy tr√¨nh!');
      } else {
        alert('‚úì Kh√¢u ho√†n th√†nh! S·∫£n ph·∫©m chuy·ªÉn sang kh√¢u ti·∫øp theo.');
      }
      location.reload();
    } else {
      alert('‚úó ' + (data.error || 'L·ªói'));
    }
  } catch (error) {
    console.error('Error:', error);
    alert('‚úó L·ªói server');
  }
}

async function setPendingTask(reason) {
  if (!currentProduct) return;
  try {
    const response = await fetch('/scan/pending', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId: currentProduct.id, reason })
    });

    const data = await response.json();
    if (data.success) {
      alert('‚úì ƒê√£ chuy·ªÉn sang tr·∫°ng th√°i ch·ªù nguy√™n li·ªáu');
      location.reload();
    } else {
      alert('‚úó ' + (data.error || 'L·ªói'));
    }
  } catch (error) {
    console.error('Error:', error);
    alert('‚úó L·ªói server');
  }
}

// Handle action button clicks
function handleAction(e) {
  const action = e.target.closest('.action-btn').getAttribute('data-action');
  if (action === 'start') {
    startTask();
  } else if (action === 'complete') {
    completeTask();
  } else if (action === 'pending') {
    const reasonInput = document.getElementById('pendingReason');
    const reason = reasonInput ? reasonInput.value.trim() : '';
    if (!reason) {
      alert('Vui l√≤ng nh·∫≠p l√Ω do thi·∫øu nguy√™n li·ªáu');
      return;
    }
    setPendingTask(reason);
  }
}

// Initialize event listeners when DOM is ready
document.addEventListener('DOMContentLoaded', () => {
  // Add event listeners to product items
  document.querySelectorAll('.product-item').forEach(item => {
    item.addEventListener('click', () => {
      const productCode = item.getAttribute('data-product-code');
      if (productCode) {
        scanProduct(productCode);
      }
    });
  });

  // Listen for input field changes
  productCodeInput.addEventListener('change', () => {
    const code = productCodeInput.value.trim();
    if (code) {
      scanProduct(code);
    }
  });

  // Listen for Enter key
  productCodeInput.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();
      const code = productCodeInput.value.trim();
      if (code) {
        scanProduct(code);
      }
    }
  });
});
</script>

