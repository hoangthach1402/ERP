<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    @page {
      size: A5;
      margin: 10mm;
    }
    body {
      font-family: Arial, sans-serif;
      color: #111827;
      margin: 0;
      padding: 0;
    }
    .container {
      width: 100%;
    }
    .header {
      text-align: center;
      margin-bottom: 16px;
    }
    .header h1 {
      font-size: 18px;
      margin: 0 0 4px;
      text-transform: uppercase;
    }
    .meta {
      font-size: 12px;
      margin-bottom: 12px;
    }
    .meta p {
      margin: 4px 0;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 12px;
      margin-bottom: 12px;
    }
    th, td {
      border: 1px solid #e5e7eb;
      padding: 6px;
      text-align: left;
      vertical-align: top;
    }
    th {
      background: #f3f4f6;
    }
    .notes {
      font-size: 12px;
      margin-bottom: 16px;
    }
    .signatures {
      display: flex;
      justify-content: space-between;
      gap: 12px;
      font-size: 12px;
    }
    .signature-box {
      flex: 1;
      text-align: center;
      padding-top: 24px;
    }
    .signature-title {
      font-weight: 600;
      margin-bottom: 40px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Biên bản xuất xưởng</h1>
      <div class="meta">
        <p><strong>Số:</strong> BBX-<%= record.id %></p>
        <p><strong>Ngày lập:</strong> <%= record.created_at ? new Date(record.created_at).toLocaleString('vi-VN') : '-' %></p>
      </div>
    </div>

    <div class="meta">
      <p><strong>Địa chỉ gửi:</strong> <%= record.shipping_address %></p>
      <p><strong>Mô tả:</strong> <%= record.description || '-' %></p>
    </div>

    <table>
      <thead>
        <tr>
          <th style="width: 40px;">STT</th>
          <th>Sản phẩm / Mục</th>
          <th>Số lượng</th>
          <th>Ghi chú</th>
        </tr>
      </thead>
      <tbody>
        <% let itemIndex = 0; %>
        
        <% if (record.items && record.items.length > 0) { %>
          <% record.items.forEach((item) => { %>
            <% itemIndex++; %>
            <tr>
              <td><%= itemIndex %></td>
              <td>
                <div><strong><%= item.product_code %></strong></div>
                <div><%= item.product_name %></div>
              </td>
              <td>1</td>
              <td><%= item.product_note || '-' %></td>
            </tr>
          <% }); %>
        <% } %>
        
        <% if (record.customItems && record.customItems.length > 0) { %>
          <% record.customItems.forEach((item) => { %>
            <% itemIndex++; %>
            <tr>
              <td><%= itemIndex %></td>
              <td>
                <div><strong><%= item.item_name %></strong></div>
                <div style="font-size: 10px; color: #6b7280;"><%= item.item_type === 'document' ? 'Hồ sơ/Giấy tờ' : item.item_type === 'personal' ? 'Đồ dùng cá nhân' : 'Khác' %></div>
                <% if (item.item_description) { %>
                  <div style="font-size: 10px;"><%= item.item_description %></div>
                <% } %>
              </td>
              <td><%= item.quantity || 1 %></td>
              <td>-</td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>

    <div class="notes">
      <p><strong>Người lập:</strong> <%= record.created_by_name || '-' %></p>
    </div>

    <div class="signatures">
      <div class="signature-box">
        <div class="signature-title">Người lập biên bản</div>
        <div><%= record.created_by_name || '' %></div>
      </div>
      <div class="signature-box">
        <div class="signature-title">Ký duyệt</div>
        <div><%= record.approved_by || '' %></div>
      </div>
    </div>
  </div>
</body>
</html>
