// Assign workers modal
let currentProductId = null;
let currentProductCode = '';
let availableStages = [];
let allUsers = [];

async function assignWorkersModal(productId, productCode) {
  currentProductId = productId;
  currentProductCode = productCode;
  
  try {
    // Fetch active stages for this product
    const stagesResponse = await fetch(`/workflow/product/${productId}/active-stages`, {
      headers: {
        'Authorization': `Bearer ${authToken}`
      }
    });
    
    if (!stagesResponse.ok) throw new Error('Failed to fetch active stages');
    const stagesData = await stagesResponse.json();
    availableStages = stagesData.data || [];
    
    // Update modal content
    document.getElementById('assignModalProductCode').textContent = productCode;
    
    // Populate stages dropdown
    const stageSelect = document.getElementById('assignStageSelect');
    stageSelect.innerHTML = '<option value="">-- Chọn bộ phận --</option>';
    availableStages.forEach(stage => {
      const option = document.createElement('option');
      option.value = stage.stage_id;
      option.textContent = `${stage.stage_name} (${stage.status})`;
      stageSelect.appendChild(option);
    });
    
    // Add change listener for stage selection
    stageSelect.onchange = async (e) => {
      const stageId = parseInt(e.target.value);
      if (!stageId) {
        document.getElementById('assignWorkersContainer').innerHTML = '';
        return;
      }
      
      try {
        // Fetch assigned workers
        const assignedResponse = await fetch(`/workflow/assigned-workers/${productId}/${stageId}`, {
          headers: {
            'Authorization': `Bearer ${authToken}`
          }
        });
        
        if (!assignedResponse.ok) throw new Error('Failed to fetch assigned workers');
        const assignedData = await assignedResponse.json();
        const assignedWorkerIds = (assignedData.data || []).map(w => w.user_id);
        
        // Fetch available workers for selected stage
        const workersResponse = await fetch(`/workflow/available-workers/${productId}/${stageId}`, {
          headers: {
            'Authorization': `Bearer ${authToken}`
          }
        });
        
        if (!workersResponse.ok) throw new Error('Failed to fetch available workers');
        const workersData = await workersResponse.json();
        allUsers = workersData.data || [];
        
        // Populate workers checkboxes
        const workersContainer = document.getElementById('assignWorkersContainer');
        workersContainer.innerHTML = '';
        if (allUsers.length === 0) {
          workersContainer.innerHTML = '<p class="text-gray-500 text-sm">No available workers for this stage</p>';
        } else {
          allUsers.forEach(user => {
            const isAssigned = assignedWorkerIds.includes(user.id);
            const label = document.createElement('label');
            label.className = `flex items-center p-2 rounded ${isAssigned ? 'bg-green-50 border border-green-200' : 'hover:bg-gray-50'}`;
            label.innerHTML = `
              <input type="checkbox" name="worker" value="${user.id}" ${isAssigned ? 'checked disabled' : ''} class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" ${isAssigned ? 'style="cursor:not-allowed"' : ''}>
              <span class="ml-2 text-sm">${user.full_name} (${user.username}) - <span class="text-xs text-gray-500">${user.role}</span>${isAssigned ? ' <span class="ml-2 inline-block px-2 py-0.5 text-xs bg-green-200 text-green-800 rounded-full font-medium">Already assigned</span>' : ''}</span>
            `;
            workersContainer.appendChild(label);
          });
        }
      } catch (error) {
        console.error('Error fetching workers for stage:', error);
        document.getElementById('assignWorkersContainer').innerHTML = `<p class="text-red-500 text-sm">Error loading workers: ${error.message}</p>`;
      }
    };
    
    // Show modal
    document.getElementById('assignWorkersModal').classList.remove('hidden');
    
  } catch (error) {
    console.error('Error opening assign workers modal:', error);
    alert('Failed to load data for assignment');
  }
}

