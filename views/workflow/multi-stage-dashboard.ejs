async function handleInboundSubmit(event) {
  event.preventDefault();

  const inboundType = document.querySelector('input[name="inboundType"]:checked').value;
  const skipStaging = document.getElementById('skipStaging')?.checked || false;

  try {
    let endpoint, body;

    if (inboundType === 'product') {
      const productId = document.getElementById('inboundProductSelect').value;
      const description = document.getElementById('inboundDescription').value.trim();
      const kcsStatus = document.getElementById('inboundKcsStatus')?.value || '';
      
      if (!productId) {
        alert('Vui lòng chọn sản phẩm');
        return;
      }

      const stages = Array.from(document.querySelectorAll('[data-stage-id]'))
        .filter(input => input.checked)
        .map(input => {
          const stageId = Number(input.getAttribute('data-stage-id'));
          const hoursInput = document.querySelector(`[data-stage-hours="${stageId}"]`);
          return {
            stage_id: stageId,
            norm_hours: Number(hoursInput?.value || 0)
          };
        })
        .filter(item => item.norm_hours > 0);

      if (stages.length === 0) {
        alert('Vui lòng chọn ít nhất 1 stage với định mức hợp lệ');
        return;
      }

      endpoint = '/workflow/inbound/create';
      body = { productId, description, stages, kcsStatus };
    } else {
      // Custom item inbound
      const itemType = document.getElementById('customInboundItemType').value;
      const itemName = document.getElementById('customInboundItemName').value.trim();
      const itemDescription = document.getElementById('customInboundItemDescription').value.trim();
      const quantity = Number(document.getElementById('customInboundQuantity').value);

      if (!itemName) {
        alert('Vui lòng nhập tên hàng');
        return;
      }

      if (skipStaging) {
        // Nhập trực tiếp vào kho
        endpoint = '/workflow/warehouse/add-custom-item';
        body = { 
          item_type: itemType, 
          item_name: itemName, 
          item_description: itemDescription,
          quantity
        };
      } else {
        // Nhập với staging
        const stages = Array.from(document.querySelectorAll('[data-stage-id]'))
          .filter(input => input.checked)
          .map(input => {
            const stageId = Number(input.getAttribute('data-stage-id'));
            const hoursInput = document.querySelector(`[data-stage-hours="${stageId}"]`);
            return {
              stage_id: stageId,
              norm_hours: Number(hoursInput?.value || 0)
            };
          })
          .filter(item => item.norm_hours > 0);

        if (stages.length === 0) {
          alert('Vui lòng chọn ít nhất 1 stage với định mức hợp lệ');
          return;
        }

        endpoint = '/workflow/inbound/create-custom';
        body = { 
          item_type: itemType, 
          item_name: itemName, 
          item_description: itemDescription,
          quantity,
          stages 
        };
      }
    }

    const response = await fetch(endpoint, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${authToken || localStorage.getItem('token') || ''}`
      },
      body: JSON.stringify(body)
    });

    const data = await response.json();
    if (!response.ok) throw new Error(data.error || 'Failed to create inbound record');

    if (skipStaging) {
      alert('Đã thêm hàng trực tiếp vào kho');
      loadCompletedProducts(); // Refresh warehouse
    } else {
      alert('Đã tạo phiếu nhập hàng');
      loadInboundRecords();
    }
    
    document.getElementById('inboundForm').reset();
    toggleInboundType(); // Reset UI
    loadInboundRecords();
  } catch (error) {
    console.error('Error creating inbound record:', error);
    alert('Lỗi: ' + error.message);
  }
}

