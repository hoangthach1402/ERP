function showMainTab(tabName) {
  const tabMap = {
    active: { contentId: 'activeTab-content', buttonId: 'activeProductsTab' },
    completed: { contentId: 'completedProductsTab-content', buttonId: 'completedProductsTab' },
    export: { contentId: 'exportManagementTab-content', buttonId: 'exportManagementTab' },
    inbound: { contentId: 'inboundTab-content', buttonId: 'inboundTab' },
    kcsForm: { contentId: 'kcsFormTab-content', buttonId: 'kcsFormTab' },
    kcsDinh: { contentId: 'kcsDinhTab-content', buttonId: 'kcsDinhTab' }
  };

  Object.entries(tabMap).forEach(([tab, ids]) => {
    const isCurrent = tab === tabName;
    document.getElementById(ids.contentId).classList.toggle('hidden', !isCurrent);
    document.getElementById(ids.buttonId).classList.toggle('border-indigo-600', isCurrent);
    document.getElementById(ids.buttonId).classList.toggle('text-indigo-600', isCurrent);
    document.getElementById(ids.buttonId).classList.toggle('border-transparent', !isCurrent);
    document.getElementById(ids.buttonId).classList.toggle('text-gray-600', !isCurrent);
  });
}

function renderStageDetails(stageDetailsRaw) {
  if (!stageDetailsRaw) return '';
  const items = stageDetailsRaw.split('##').filter(Boolean);
  return items.map(item => {
    const [name, description, hours] = item.split('||');
    const desc = description ? `<span class="text-xs text-gray-500">${description}</span>` : '';
    return `
      <div class="flex flex-col">
        <span class="text-sm font-medium text-gray-900">${name} <span class="text-xs text-gray-500">(${hours}h)</span></span>
        ${desc}
      </div>
    `;
  }).join('');
}

