function initKcsFilters() {
  const now = new Date();
  const currentMonth = String(now.getMonth() + 1);
  const currentYear = String(now.getFullYear());
  const yearStart = now.getFullYear() - 3;
  const yearEnd = now.getFullYear() + 1;

  const monthOptions = Array.from({ length: 12 }, (_, idx) => ({
    value: String(idx + 1),
    label: `Tháng ${idx + 1}`
  }));

  const yearOptions = [];
  for (let year = yearStart; year <= yearEnd; year += 1) {
    yearOptions.push({ value: String(year), label: String(year) });
  }

  setSelectOptions(document.getElementById('kcsFormMonths'), monthOptions, [currentMonth]);
  setSelectOptions(document.getElementById('kcsFormYears'), yearOptions, [currentYear]);
  setSelectOptions(document.getElementById('kcsDinhMonths'), monthOptions, [currentMonth]);
  setSelectOptions(document.getElementById('kcsDinhYears'), yearOptions, [currentYear]);
}

function getSelectedFilterValues(monthSelectId, yearSelectId) {
  const monthSelect = document.getElementById(monthSelectId);
  const yearSelect = document.getElementById(yearSelectId);
  const months = Array.from(monthSelect?.selectedOptions || []).map(opt => opt.value);
  const years = Array.from(yearSelect?.selectedOptions || []).map(opt => opt.value);

  if (months.length === 0 || years.length === 0) {
    const now = new Date();
    const fallbackMonth = String(now.getMonth() + 1);
    const fallbackYear = String(now.getFullYear());

    if (months.length === 0 && monthSelect) {
      Array.from(monthSelect.options).forEach(opt => {
        if (opt.value === fallbackMonth) opt.selected = true;
      });
      months.push(fallbackMonth);
    }

    if (years.length === 0 && yearSelect) {
      Array.from(yearSelect.options).forEach(opt => {
        if (opt.value === fallbackYear) opt.selected = true;
      });
      years.push(fallbackYear);
    }
  }

  return { months, years };
}

