// Create product and assign stages
document.getElementById('createProductForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const formData = new FormData(e.target);
  const productCode = formData.get('product_code');
  const productName = formData.get('product_name');
  
  // Get selected stages
  const selectedStages = [];
  const stageHours = {};
  formData.getAll('stages').forEach(stageId => {
    selectedStages.push(parseInt(stageId));
    stageHours[stageId] = parseInt(formData.get(`stage_hours_${stageId}`)) || 0;
  });
  
  if (selectedStages.length === 0) {
    alert('Vui lòng chọn ít nhất 1 bộ phận');
    return;
  }
  
  try {
    // Step 1: Create product
    const createResponse = await fetch('/product/create', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${authToken}`
      },
      body: JSON.stringify({
        product_code: productCode,
        product_name: productName,
        stageHours: stageHours
      })
    });
    
    if (!createResponse.ok) {
      const error = await createResponse.json();
      throw new Error(error.error || 'Failed to create product');
    }
    
    const createResult = await createResponse.json();
    const productId = createResult.product?.id;
    
    if (!productId) {
      throw new Error('Product created but no ID returned');
    }
    
    // Step 2: Assign selected stages with norm hours
    const assignResponse = await fetch('/workflow/assign-stages', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${authToken}`
      },
      body: JSON.stringify({
        productId: productId,
        stageIds: selectedStages,
        stageNorms: stageHours, // Gửi kèm norm_hours cho từng stage
        userIds: [] // Admin sẽ gán workers sau
      })
    });
    
    if (!assignResponse.ok) {
      throw new Error('Product created but failed to assign stages');
    }
    
    alert(`Tạo sản phẩm ${productCode} thành công với ${selectedStages.length} bộ phận!`);
    closeCreateProductModal();
    loadOverview(); // Reload data
    
  } catch (error) {
    console.error('Error creating product:', error);
    alert('Lỗi: ' + error.message);
  }
});

