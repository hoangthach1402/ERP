<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Manufacturing ERP' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .role-badge {
      font-size: 11px;
      padding: 2px 6px;
    }
    .status-processing { @apply bg-blue-100 text-blue-800; }
    .status-completed { @apply bg-green-100 text-green-800; }
    .status-delayed { @apply bg-red-100 text-red-800; }
    .status-pending { @apply bg-yellow-100 text-yellow-800; }
  </style>
</head>
<body class="bg-gray-50">
  <nav class="bg-gradient-to-r from-purple-600 to-pink-600 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <i class="fas fa-industry text-white text-2xl mr-3"></i>
          <span class="text-white text-xl font-bold">Manufacturing ERP</span>
        </div>
        
        <div class="flex items-center space-x-4">
          <% if (user) { %>
            <span class="text-white text-sm"><%= user.full_name %></span>
            <span class="role-badge bg-white text-purple-600 font-semibold rounded px-3 py-1">
              <%= user.role %>
            </span>
          <% } %>
          <a href="/logout" class="text-white hover:bg-purple-700 px-3 py-2 rounded-md text-sm font-medium transition">
            <i class="fas fa-sign-out-alt mr-1"></i>ƒêƒÉng Xu·∫•t
          </a>
        </div>
      </div>

      <!-- Main Navigation -->
      <% if (user) { %>
      <div class="border-t border-purple-500 py-3">
        <div class="flex flex-wrap space-x-4">
          <!-- Multi-Stage Workflow (Admin Only) -->
          <% if (user.role === 'ADMIN') { %>
            <a href="/workflow/multi-stage-dashboard" class="text-white bg-purple-800 hover:bg-purple-900 px-3 py-2 rounded-md text-sm font-medium transition">
              <i class="fas fa-layer-group mr-2"></i>Multi-Stage
            </a>
          <% } %>
          
          <!-- Worker Tasks -->
          <% if (user.role !== 'THU_MUA') { %>
            <div class="relative group">
              <button id="myTasksBtn" onclick="return toggleTasksDropdown(event)" class="text-white bg-purple-800 hover:bg-purple-900 px-3 py-2 rounded-md text-sm font-medium transition">
                <i class="fas fa-tasks mr-2"></i>My Tasks
              </button>
              <!-- Dropdown Menu for Mobile -->
              <div id="taskStatusDropdown" class="hidden md:hidden absolute top-full mt-2 left-0 bg-white rounded-lg shadow-lg p-2 w-48 z-50">
                <button onclick="goToTasks('assigned')" class="w-full text-left px-3 py-2 rounded hover:bg-gray-100 transition flex items-center gap-2">
                  <span>üìã</span>
                  <span>Assigned</span>
                  <span class="ml-auto bg-red-600 text-white rounded-full px-2 py-0.5 text-xs font-bold" id="dropdown-count-assigned">0</span>
                </button>
                <button onclick="goToTasks('working')" class="w-full text-left px-3 py-2 rounded hover:bg-gray-100 transition flex items-center gap-2">
                  <span>‚öôÔ∏è</span>
                  <span>Working</span>
                  <span class="ml-auto bg-yellow-600 text-white rounded-full px-2 py-0.5 text-xs font-bold" id="dropdown-count-working">0</span>
                </button>
                <button onclick="goToTasks('completed')" class="w-full text-left px-3 py-2 rounded hover:bg-gray-100 transition flex items-center gap-2">
                  <span>‚úÖ</span>
                  <span>Done</span>
                  <span class="ml-auto bg-blue-600 text-white rounded-full px-2 py-0.5 text-xs font-bold" id="dropdown-count-completed">0</span>
                </button>
              </div>
            </div>
          <% } %>
          
          <!-- Purchasing Requests (Purchasing Staff) -->
          <% if (user.role === 'THU_MUA' || user.role === 'ADMIN') { %>
            <a href="/purchasing/dashboard" class="text-white bg-purple-800 hover:bg-purple-900 px-3 py-2 rounded-md text-sm font-medium transition">
              <i class="fas fa-shopping-cart mr-2"></i>Y√™u C·∫ßu Thu Mua
            </a>
          <% } %>
          
          <!-- Admin Settings -->
          <% if (user.role === 'ADMIN') { %>
            <a href="/admin/dashboard" class="text-white hover:bg-purple-700 px-3 py-2 rounded-md text-sm font-medium transition">
              <i class="fas fa-cog mr-2"></i>Qu·∫£n L√Ω
            </a>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
